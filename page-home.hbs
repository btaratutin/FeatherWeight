
<link rel="stylesheet" type="text/css" href='{{ asset "css/home.css" }}' />

{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}
              
{{! Everything inside the #post tags pulls data from the page }}

{{#post}}

{{! The big featured header on the homepage, with the site logo and description }}
<header id="site-head" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
    <div class="vertical" id="site-head-content">
            {{#if @blog.logo}}<a id="blog-logo" class="vertical" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
            <h1 class="blog-title vertical">{{@blog.title}}</h1>
            <h2 class="blog-description vertical">{{@blog.description}}</h2>

<!--
            <a class='btn first vertical'>Take a tour</a>
            <a class='btn last vertical'>Cut to the chase</a><br>
            <i id='header-arrow' class="fa fa-angle-down"></i>
-->
    </div>

</header>

{{! The main content area on the homepage }}
<main class="content" role="main">

    <div class='fixed-nav'>
    </div>
    
    <section class="post-content">
        {{content}}
    </section>


    <div class='date-published'>
        Last Update: {{date updated_at format="hh:mm:ss MMMM DD, YYYY"}}
    </div>
    
</main>

{{/post}}
